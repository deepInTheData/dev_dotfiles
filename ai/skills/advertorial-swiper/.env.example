# Cloudflare R2 (S3-compatible)
R2_ENDPOINT=
R2_BUCKET=
R2_PUBLIC_BASE=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
# Optional
R2_REGION=auto
R2_PREFIX=swipe
INCLUDE_HTML=true

# Notion
NOTION_API_KEY=
NOTION_PAGE_ID=2f9688e96a378075b0ffeb8bff399e41

# Optional run behavior
VIEWPORT_W=1280
VIEWPORT_H=720
JPG_QUALITY=82
MAX_PAGES=8
STOP_AT_BILLING=true

# Capture mode
# Wait before the screenshot to allow late-loading content
WAIT_BEFORE_SCREENSHOT_MS=2000

# Markdown capture via r.jina.ai (stored locally as step-XX.md and embedded in Notion as code blocks)
CAPTURE_MARKDOWN=true

# Notion limits blocks per append/create; batch size for publishing
NOTION_CHILDREN_BATCH=90
# Notion limits toggle children to <= 100
NOTION_TOGGLE_CHILDREN_BATCH=90